  .contents__chat-left-side
    =render 'shared/side_bar'
  
  .contents__chat-right-side
    
    .contents__chat-right-side__top
      .contents__chat-right-side__top__left-box
        .contents__chat-right-side__top__left-box__current-group
          test-group
